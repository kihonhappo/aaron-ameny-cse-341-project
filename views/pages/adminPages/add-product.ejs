<!DOCTYPE html>
<html>

<head>
  <%- include('../../includes/header.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  
</head>

<body>
   <%- include('../../includes/nav.ejs') %>
   <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <main class="add-product-frm">
        <h3>Admin Add Product <button class="btn btn-sm btn-success" id="load-prod">Auto Load</button></h3>
        <form id="add-product" class="product-form" action="/adminPages/admin/add-product" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="text" name="title" id="title" class="form-control" value="<% if(edit || hasError) {%><%= product.title %><% } %>">
            <div class="form-group">
                <label for="price">Price</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="text" name="price" id="price" class="form-control" value="<% if(edit || hasError) {%><%= product.price %><% } %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea 
                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                name="description" id="description" class="form-control" value="<% if(edit || hasError) {%><%= product.description %><% } %>"></textarea>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select 
                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                name="category" id="category" class="form-control" data-selected="<% if(edit || hasError) {%><%= product.category %><% } %>">
                    <option value="Hair Accessories">Hair Accessories</option>
                    <option value="Necklaces">Necklaces</option>
                    <option value="Earrings">Earrings</option>
                    <option value="Bracelets">Bracelets</option>
                    <option value="Rings">Rings</option>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image </label>
                <label>Source  
                    <input type="radio" name="image-source" id="url" value="url">URl
                    <input type="radio" name="image-source" id="file" value="url">File
                </label>
                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="text" name="image" id="image" class="form-control" value="<% if(edit || hasError) {%><%= product.image %><% } %>">
            </div>
            <div class="form-group">
                <label for="quauntity">Quantity</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="number" min="1" max="1000" value="1" name="quantity" id="quantity" class="form-control" value="<% if(edit || hasError) {%><%= product.quantity %><% } %>">
            </div>
            <a class="btn btn-danger" href="/adminPages/admin/inventory">Cancel</a>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
            <button class="btn btn-warning" type="reset">Clear Form</button>
            <button class="btn btn-success" type="submit"> Add Product</button>
        </form>
    </main>
    <img scr="" alt="" class="product-image">
    <script type="text/javascript" src="/scripts/add-prod.js"></script>
    <% include ../../includes/end.ejs %>
