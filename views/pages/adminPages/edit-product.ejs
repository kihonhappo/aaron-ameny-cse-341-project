<!DOCTYPE html>
<html>

<head>
  <%- include('../../includes/header.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  
</head>

<body>
   <%- include('../../includes/nav.ejs') %>
   <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <main class="add-product-frm">
        <h3>Admin Edit Product <button class="btn btn-sm btn-success" id="load-prod">Auto Load</button></h3>
        <form id="add-product" class="product-form" action="/adminPages/admin/edit-product" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="form-control" value="<% if(edit || hasError) {%><%= product.title %><% } %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" class="form-control" value="<% if(edit || hasError) {%><%= product.price %><% } %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control"><% if(edit || hasError) {%><%= product.description %><% } %></textarea>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" data-selected="<% if(edit || hasError) {%><%= product.category %><% } %>" id="category"  class="form-control">
                    <option value="Hair Accessories">Hair Accessories</option>
                    <option value="Necklaces">Necklaces</option>
                    <option value="Earrings">Earrings</option>
                    <option value="Bracelets">Bracelets</option>
                    <option value="Rings">Rings</option>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="image" id="image" class="form-control" value="<% if(edit || hasError) {%><%= product.image %><% } %>">
            </div>
            <div class="form-group">
                <label for="quauntity">Quantity</label>
                <input type="number" min="1" max="1000" name="quantity" id="quantity" class="form-control" value="<% if(edit || hasError) {%><%= product.quantity %><% } %>">
            </div>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <a class="btn btn-danger" href="/adminPages/admin/inventory">Cancel</a>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-warning" type="reset">Clear Form</button>
            <button class="btn btn-success" type="submit"><% if(edit) { %> Update Product<% } else { %> Add Product <% } %></button>
        </form>
    </main>
    <img src="<% if(edit) {%><%= product.image %><% } %>" alt="" class="product-image">
    <script type="text/javascript" src="/scripts/add-prod.js"></script>
    <% include ../../includes/end.ejs %>
