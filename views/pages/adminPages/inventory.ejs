<!DOCTYPE html>
<html>

<head>
  <% include ../../includes/header.ejs %>
  <link rel="stylesheet" type="text/css" href="/css/inventory.css" /> 
</head>

<body>
  <% include ../../includes/nav.ejs %>
  <main>
    <% if (prods.length > 0) { %>
        <table class="table table-striped table-outlined table-hover">
          <thead>
            <tr>
              <% Object.keys(prods[0]).forEach(function(key) { %>
                <% if(key == 'id'){ %>
                <th class="tbl-actions">
                  <input type="checkbox" /> 
                  <a class="link" href="/admin/new-product"><i class="fa fa-plus"></i></a>
                  <a class="link" href="/admin/edit-products-batch"><i class="fa fa-edit"></i></a>
                  <a class="link" href="/admin/copy-products-batch"><i class="fa fa-copy"></i></a>
                  <a class="link" href="/admin/delete-products-batch"><i class="fa fa-trash"></i></a>
                </th>
                <% } else { %>
                <th><%= key %></th>
                <% } %>
              <% }); %>
            </tr>
          </thead>
          <tbody>
            <% for (let product of prods) { %>
              <tr data-id="<%= product.id %>">
                  <% Object.keys(product).forEach(function(key) { %>
                    <% switch(key){ 
                        case 'id': %>
                          <td data-id="<%= product.id %>" class="row-actions">
                            <div class="btn-group">
                              <input type="checkbox" data-id="<%= product.id %>" />
                              <a class="link" href="<%= '/admin/edit-product?id=' + product.id %>"><i class="fa fa-edit"></i></a>
                              <a class="link" href="<%= '/admin/copy-product?id=' + product.id %>"><i class="fa fa-copy"></i></a>
                              <a class="link" href="<%= '/admin/delete-product?id=' + product.id %>"><i class="fa fa-trash"></i></a>
                            </div>
                          </td>
                          <% break;  
                        case 'rating':
                      %>
                        <td><%= JSON.stringify(product[key]) %></td>
                      <% break;  
                        case 'image': %>
                        <td><img alt="<%= product.title %>" class="tbl-img" src="<%= product[key] %>" /></td>
                        <% break; 
                        default:  %>
                          <td><%= product[key] %></td>
                        <% break;  %>
                      <% } %>
                  <% }); %>  
              </tr>                      
            <% } %>
          </tbody>
        </table>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>


    <% include ../../includes/end.ejs %>